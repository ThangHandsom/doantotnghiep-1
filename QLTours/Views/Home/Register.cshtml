@model QLTours.Models.User

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Jost', sans-serif;
        background: linear-gradient(to right, #4facfe, #00f2fe);
    }

    .container2 {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .register-container {
        display: flex;
        width: 90%;
        max-width: 900px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    .register-image {
        width: 40%;
        background: url('/Adminassets/images/mn.jpg') center/cover no-repeat;
    }

    .register-form {
        flex: 1;
        padding: 40px;
        color: #333;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .register-form label {
            color: #0065F8;
            text-align: center;
            font-size: 2.3em;
            font-weight: bold;
            margin-bottom: 30px;
        }


    .form-control {
        width: 100%;
        height: 40px;
        margin-bottom: 20px;
        padding: 10px;
        border: none;
        outline: none;
        border-radius: 10px;
        background-color: #e0dede;
        color: #000;
        font-size: 1em;
    }

    .button2 {
        width: 100%;
        height: 40px;
        margin-top: 20px;
        font-size: 1em;
        font-weight: bold;
        color: #fff;
        background-color: #4facfe;
        border: none;
        outline: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

        .button2:hover {
            background-color: #6d44b8;
        }
</style>

<div class="container2">
    <div class="register-container">
        <div class="register-image"></div>
        <div class="register-form">
            <label>Đăng ký</label>
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <input asp-for="Username" placeholder="Tên đăng nhập" class="form-control">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Phone" placeholder="Số điện thoại" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" placeholder="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="Mật khẩu" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input name="ConfirmPassword" placeholder="Xác nhận mật khẩu" type="password" class="form-control">
                    <span class="text-danger">@ViewData["ConfirmPasswordError"]</span>
                </div>
                <button type="submit" class="button2">Đăng ký</button>
            </form>
        </div>
    </div>
</div>
